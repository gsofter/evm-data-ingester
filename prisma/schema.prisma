generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the PostgreSQL data model
model Block {
  number     Int      @id
  hash       String   @unique
  parentHash String
  nonce      String?
  difficulty String
  gasLimit   Int
  gasUsed    Int
  miner      String
  timestamp  DateTime
}
